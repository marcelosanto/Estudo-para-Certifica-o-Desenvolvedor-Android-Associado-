<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".core.ToastSnakeFragment">

  <ImageView
      android:id="@+id/toast"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:background="?attr/selectableItemBackground"
      android:src="@drawable/ic_toast"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.12"
      tools:ignore="ContentDescription" />

  <ImageView
      android:id="@+id/snake"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:background="?attr/selectableItemBackground"
      android:src="@drawable/ic_snake"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/toast"
      app:layout_constraintVertical_bias="0.10"
      tools:ignore="ContentDescription" />

  <ImageView
      android:id="@+id/blank"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:background="?attr/selectableItemBackground"
      android:src="@drawable/ic_blank"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/snake"
      app:layout_constraintVertical_bias="0.32"
      tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>